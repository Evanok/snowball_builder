#!/bin/sh
echo 8>/proc/sys/kernel/printk
hciattach -a 23 -n -s 115200 /dev/ttyAMA0 cg2900 115200 flow &
modprobe cw1200_core
modprobe cw1200_wlan
sleep 3



ifconfig wlan0 up
iwconfig wlan0 power off
